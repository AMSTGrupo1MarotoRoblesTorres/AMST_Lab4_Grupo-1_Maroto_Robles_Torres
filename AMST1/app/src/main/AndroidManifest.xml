    package="com.example.amst1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_portada"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_portada_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AMST1">
        <activity android:name=".splash"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".nueva_temperatura"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".red_sensores"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".menu"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
    </application>

</manifest>